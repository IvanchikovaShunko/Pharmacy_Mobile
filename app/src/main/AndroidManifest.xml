<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bsu.fpmi.pharmacy.pharmacy_mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the username form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".PharmacyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.SubscriptionsActivity" />
        <activity android:name=".activities.MedicineActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.InstructionsActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.SignInActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.AddMedicineActivity" />
        <activity android:name=".activities.MedicineInfoActivity" />

    </application>

</manifest>