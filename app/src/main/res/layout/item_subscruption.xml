<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/link_text_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/photo_view"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:id="@+id/linear_layout">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:gravity="center_vertical"
            android:id="@+id/medicine_name"
            tools:text="Medicine Name"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical"
            android:text="Date"
            android:layout_marginTop="4dp"
            android:id="@+id/expire_date_textView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linear_layout"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:id="@+id/linearLayout">

        <ImageView
            app:srcCompat="@drawable/ic_info_black_24dp"
            android:layout_alignRight="@+id/linear_layout"
            android:layout_margin="16dp"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:id="@+id/info_imageView"
            android:clickable="true" />
    </LinearLayout>

    <ImageView
        android:layout_width="72dp"
        app:srcCompat="@drawable/ic_placeholder"
        android:id="@+id/photo_view"
        android:layout_height="72dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>